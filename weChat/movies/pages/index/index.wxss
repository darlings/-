/* pages/index/index.wxss */
/* @import "/common/style/list.wxss"; */
page {
  padding-bottom: 40rpx;
  background-color: #f1f1f1;
}
.the-movie-list {
  padding: 20rpx 0;
  background-color: #fff;
  margin-top: 40rpx;
}
.movie-list-head {
  position: relative;
  padding: 10rpx 30rpx;
}
.movie-list-head text {
  font-size: 32rpx;
}
.movie-list-head .m-more {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
}
.movie-scroll {
  width: 100%;
  height: 450rpx;
  overflow: hidden;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  white-space: nowrap;
}
.movie-scroll .single-movie {
  width: 210rpx;
  display: inline-block;
  margin-right: 30rpx;
  font-size: 0;
}
.movie-scroll .single-movie > image, .movie-scroll .single-movie > text {
  display: block;
  width: 100%;
}
.movie-scroll .single-movie > image {
  width: 200rpx;
  height: 280rpx;
}
.movie-scroll .single-movie .m-name {
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-top: 10rpx;
}
.movie-scroll .single-movie .m-rating, .movie-scroll .single-movie .m-wish {
  font-size: 22rpx;
  color: #9f9e9e;
  margin-top: 10rpx;
}
.movie-scroll .single-movie .m-rating {
  width: auto;
  padding-left: 55px;
  height: 11px;
  background-repeat: no-repeat;
  /* ic_rating_s.png */
  background-image: url("data:image/png;base64,");
}
.allstar10 {
  background-position: 0px 0px;
}
.allstar9 {
  background-position: 0px -11px;
}
.allstar8 {
  background-position: 0px -22rpx;
}
.allstar7 {
  background-position: 0px -33px;
}
.allstar6 {
  background-position: 0px -44px;
}
.allstar5 {
  background-position: 0px -55px;
}
.allstar4 {
  background-position: 0px -66px;
}
.allstar3 {
  background-position: 0px -77px;
}
.allstar2 {
  background-position: 0px -88px;
}
.allstar1 {
  background-position: 0px -99px;
}
.allstar0 {
  background-position: 0px -110px;
}
.top250-gradient {
  display: block;
  width: 65%;
  border-radius: 20rpx;
  box-sizing: border-box;
  margin: 30rpx auto;
  background: -webkit-linear-gradient(#ff8c00, #f9ebcf);
  background: linear-gradient(#ff8c00, #f9ebcf);
}
.selected-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 300rpx;
}
.selected-content .name {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  margin-top: 30rpx;
}
.selected-content .desc {
  font-size: 24rpx;
  color: #fff;
}
.selected-poster {
  margin-top: 18rpx;
}
.selected-content .selected-poster-left, .selected-poster-right {
  width: 80rpx;
  height: 110rpx;
  margin-bottom: 15rpx;
}
.selected-content .selected-poster-center {
  width: 100rpx;
  height: 148rpx;
}
.text-align-c {
  text-align: center;
}