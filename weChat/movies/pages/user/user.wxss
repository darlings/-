/* pages/user/user.wxss */
.user {
  width: 100%;
  height: 100%;
  background-color: #f1f1f1;
}
.user .user-info {
  background-color: #fff;
  display: flex;
  flex-flow: column;
  align-items: center;
  padding: 40rpx 25rpx;
  margin-bottom: 20rpx;
}
.user-info .u-header-img {
  display: block;
  width: 180rpx;
  height: 180rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 1px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  margin-bottom: 20rpx;
}
.user-info .u-name {
  font-size: 30rpx;
  color: #333;
}
.user-handler .u-item {
  display: flex;
  align-items: center;
  position: relative;
  font-size: 30rpx;
  color: #333;
  background-color: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
}
.user-handler .u-item image {
  width: 40rpx;
  height: 40rpx;
}
.user-handler .u-item .u-icon {
  vertical-align: middle;
  margin-right: 10rpx;
}
.user-handler .u-item .u-more {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}
.user-handler button.btn-share, .user-handler text {
  flex: 1;
  text-align: left;
}
button::after{
  border:none;
}
.user-handler button.btn-share {
  display: inline-block;
  outline: none;
  border: none;
  font-size:30rpx;
  color:#333;
  background-color:#fff;
  line-height: normal;
  padding: 0;
}